<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyleMain">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_others</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_marginBottom">@dimen/between_buttons</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">17dp</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="ImageButtons">
        <item name="iconTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="ButtonStyleSetting" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="iconGravity">end</item>
        <item name="android:textSize">@dimen/size_setting</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingBottom">@dimen/bottom_and_top</item>
        <item name="android:paddingTop">@dimen/bottom_and_top</item>
        <item name="android:paddingLeft">@dimen/setting_left_padding</item>
        <item name="android:gravity">start</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ChatSupport_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Edit_Layout_Search">
        <item name="android:layout_marginLeft">@dimen/setting_left_padding</item>
        <item name="android:layout_marginRight">@dimen/margin_left_others</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">@dimen/padding_for_edit_layout</item>
        <item name="android:paddingTop">@dimen/padding_for_edit_layout</item>
        <item name="android:paddingEnd">@dimen/paddingEnd</item>
        <item name="android:autofillHints"></item>
        <item name="android:paddingLeft">15.13dp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:drawableStart">@drawable/ic_search_search</item>
        <item name="android:drawablePadding">5.13dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:maxLength">365</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">@dimen/size_setting</item>
    </style>

    <style name="ClearButton">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="TextOnTop">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBackToMain">
        <item name="android:layout_margin">20px</item>
        <item name="android:fillColor">?attr/colorPrimaryVariant</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="PlayerBottomRightText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="PlayerBottomLeftText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>



    <style name="trackTitle">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="artist_name">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="PTText">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="PTValues">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>