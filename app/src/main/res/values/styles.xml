<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyleMain">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_others</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_marginBottom">@dimen/between_buttons</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">17dp</item>
        <item name="iconTint">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="ImageButtons">
        <item name="iconTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="ButtonStyleSetting" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
        <item name="iconGravity">end</item>
        <item name="android:textSize">@dimen/size_setting</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingBottom">@dimen/bottom_and_top</item>
        <item name="android:paddingTop">@dimen/bottom_and_top</item>
        <item name="android:paddingLeft">@dimen/setting_left_padding</item>
        <item name="android:gravity">start</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ChatSupport_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>